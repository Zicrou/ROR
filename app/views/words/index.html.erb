<h1>Listing Words</h1>
<%= link_to 'New word',new_word_path %>
<table>
  <tr>
    <th>Nature</th>
    <th>Word</th>
    <th>Exemple</th>
    <th></th>
  </tr>
 
  <% @words.each do |word| %>
    <tr>
      <td><%= word.nature %></td>
      <td><%= word.word %></td>
      <td><%= word.exemple %></td>
      <td><%= link_to 'Show', word_path(word) %></td>
      <td><%= link_to 'Edit', edit_word_path(word) %></td>
      <td><%= link_to 'Destroy', word_path(word),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
